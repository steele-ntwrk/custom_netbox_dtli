DB_NAME=netbox
DB_USER=netbox
DB_PASSWORD=netbox
DB_HOST=IP_ADDRESS_OF_POSTGRESQL_SERVE

REDIS_HOST=IP_ADDRESS_OF_REDIS_SERVER

SUPERUSER_NAME=admin
SUPERUSER_EMAIL=admin@example.com
SUPERUSER_PASSWORD=changeme

